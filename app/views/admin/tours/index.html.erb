<% provide(:title, @tours.name) %>
<%= link_to "Create tour", new_admin_tour_path, class: "btn btn-primary"%>
<% @tours.each do |tour| %>
<div class="container">
    <div class="card">
      <div class="container-fliud">
        <div class="wrapper row">
          <div class="preview col-md-6">
            <div class="preview-pic tab-content">
              <div class="tab-pane active" id="pic-1"> <%= image_tag tour.picture.url if tour.picture? %></div>
            </div>
          </div>
          <div class="details col-md-6">
            <h3 class="product-title"><%= link_to tour.name, admin_tour_path(tour) %></h3>
            <div class="rating">
              <span class="review-no"> Ngày bắt đầu: <%= tour.start_at%> </span>
            </div>
            <p class="product-description"> Số Ngày: <%= tour.number_of_day %></p>
            <h4 class="price">Giá tiền: <span><%= tour.price %></span></h4>
            <h5 class="sizes">
            <%= tour.place %>
            </h5>
          </div>
          <div class="action">
            <%= link_to "edit tour", edit_admin_tour_path(tour.id), class: "btn btn-primary"%>
            <%= link_to "delete",admin_tour_path(tour), method: :delete, data: { confirm: "You sure?"}, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
